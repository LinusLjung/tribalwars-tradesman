{
  "manifest_version": 2,

  "name": "TribalWars tradesman",
  "description": "Automatically trade on the TribalWars market",
  "version": "0.1",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "default_title": "Tribalwars Tradesman"
  },
  "content_scripts": [
    {
      "matches": ["https://*.tribalwars.se/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "https://*.tribalwars.se/*"
  ]
}
